<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:contentPaddingBottom="10dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="5dp">

    <LinearLayout
        android:id="@+id/dayMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/dayMoney_sortImage"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_calendar"
            app:riv_border_width="0dp"
            app:riv_corner_radius="5dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayMoney_sortType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="午餐"

                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/dayMoney_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注啊实打实"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dayMoney_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="-18.8"
                android:layout_gravity="right|center_vertical"

                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/dayMoney_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_gravity="right|center_vertical"

                tools:ignore="RtlHardcoded" />

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>